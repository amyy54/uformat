{
    "$schema": "https://amyy.me/static/files/uformat/1/.uformat.schema.json",
    "version": 1,
    "formats":
    {
        "Go": {
            "glob": "*.go",
            "command": "gofmt",
            "args": ["-w", "<file>"]
        },
        "Markdown": {
            "glob": "*.md",
            "command": "mdformat",
            "args": ["--wrap", "80", "<file>"]
        }
    },
    "ignore": ["*go.mod", "*go.sum", "*Makefile", "*dist/*"]
}
